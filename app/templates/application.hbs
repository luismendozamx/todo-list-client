<nav class="navbar navbar-default">
  <div class="container">
    <div class="navbar-header">
      {{link-to 'Ember Todo-List' 'index' class="navbar-brand"}}
    </div>
  </div>
</nav>

<div id="main">
  <div class="container">
    <div class="row">
      <div class="col-sm-3 side-nav">

        {{new-list-form
          list=newList
          createList='createList'
          saveList='saveList'}}

        <div class="list-nav">
          <hr>
          <ul class="nav nav-pills nav-stacked">
            {{#each model as |list|}}
              <li>{{link-to list.title 'lists.show.todos' list disabled=list.isNew}}</li>
            {{/each}}
          </ul>
        </div>
      </div>

      <div class="col-sm-9">
        {{outlet}}
      </div>
    </div>
  </div>
</div>
